<!DOCTYPE html>
<html lang="en">
<head>
    <title>Todo List App</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #1e1e2e;
            color: #fff;
            text-align: center;
            padding: 20px;
        }

        h1 {
            background: linear-gradient(135deg, #ff7eb3, #ff758c);
            padding: 15px;
            border-radius: 10px;
        }

        ul {
            list-style: none;
            padding: 0;
            max-width: 400px;
            margin: 20px auto;
        }

        ul li {
            background: #2a2a3a;
            border-radius: 8px;
            padding: 10px;
            margin-bottom: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: 0.3s;
            color: white;
        }

        ul li:hover {
            transform: scale(1.05);
        }

        .completed {
            text-decoration: line-through;
            color: #aaa;
        }

        .favorite {
            color: gold;
        }

        .btn {
            cursor: pointer;
            font-size: 16px;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            margin: 0 5px;
        }

        .fav-btn {
            background: none;
            color: gold;
        }

        .complete-btn {
            background: #4CAF50;
            color: white;
        }

        .delete-btn {
            background: red;
            color: white;
        }

        .edit-btn {
            background: #ffc107;
            color: black;
        }

        form {
            max-width: 400px;
            margin: 20px auto;
            background: #2a2a3a;
            padding: 20px;
            border-radius: 10px;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: none;
            margin-bottom: 10px;
            background: #3a3a4a;
            color: white;
            outline: none;
        }

        input[type="submit"] {
            background: linear-gradient(135deg, #ff7eb3, #ff758c);
            color: white;
            border: none;
            padding: 10px;
            border-radius: 5px;
            width: 100%;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <h1>üöÄ Todo List</h1>

    <% if (todolist.length === 0) { %>
        <p>No tasks yet! Add one below. üöÄ</p>
    <% } else { %>
        <ul>
            <% todolist.forEach(function(todo, index) { %>
            <li class="<%= todo.completed ? 'completed' : '' %> <%= todo.favorite ? 'favorite' : '' %>">
                <button class="btn fav-btn" onclick="toggleFavorite(<%= index %>)">‚≠ê</button>
                <button class="btn complete-btn" onclick="toggleComplete(<%= index %>)">‚úÖ</button>
                <span><%- todo.text %></span>
                <a href="/todo/edit/<%= index %>" class="btn edit-btn">‚úé</a>
                <a href="/todo/delete/<%= index %>" class="btn delete-btn">‚úò</a>
            </li>
            <% }); %>
        </ul>
    <% } %>

    <form action="/todo/add" method="POST">
        <input type="text" name="newtodo" placeholder="Add a new task..." autofocus required />
        <input type="submit" value="Add Task" />
    </form>

    <script>
        function toggleComplete(index) {
            fetch(`/todo/complete/${index}`, { method: 'POST' })
                .then(() => location.reload());
        }

        function toggleFavorite(index) {
            fetch(`/todo/favorite/${index}`, { method: 'POST' })
                .then(() => location.reload());
        }
    </script>
</body>
</html>
