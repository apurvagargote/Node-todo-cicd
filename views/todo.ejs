<!DOCTYPE html>
<html lang="en">
<head>
    <title>Todo List</title>
    <style>
        body { font-family: Arial, sans-serif; background-color: #f4f4f4; text-align: center; }
        h1 { background-color: #4CAF50; color: white; padding: 20px; margin: 0; }
        .container { max-width: 400px; margin: 20px auto; background: white; padding: 20px; border-radius: 10px; }
        ul { list-style: none; padding: 0; }
        ul li { background: white; padding: 10px; margin-bottom: 10px; display: flex; justify-content: space-between; border-radius: 5px; }
        ul li.completed { text-decoration: line-through; opacity: 0.6; }
        .edit-btn, .delete-btn, .complete-btn { padding: 5px 10px; border: none; margin-left: 5px; cursor: pointer; }
        .edit-btn { background-color: #FFC107; color: white; }
        .delete-btn { background-color: red; color: white; }
        .complete-btn { background-color: #4CAF50; color: white; }
        form { margin-top: 20px; }
        input[type="text"] { width: 80%; padding: 10px; }
        input[type="submit"] { background-color: #4CAF50; color: white; padding: 10px 20px; }
    </style>
</head>
<body>
    <h1>Todo List</h1>
    <div class="container">
        <ul>
            <% todolist.forEach(function(todo, index) { %>
                <li class="<%= todo.completed ? 'completed' : '' %>">
                    <span onclick="toggleComplete(<%= index %>)"><%- todo.text %></span>
                    <div>
                        <a href="/todo/<%= index %>" class="edit-btn">✎</a>
                        <form action="/todo/delete/<%= index %>" method="post" style="display:inline;">
                            <button type="submit" class="delete-btn">✘</button>
                        </form>
                        <form action="/todo/complete/<%= index %>" method="post" style="display:inline;">
                            <button type="submit" class="complete-btn">✔</button>
                        </form>
                    </div>
                </li>
            <% }); %>
        </ul>

        <form action="/todo/add/" method="post">
            <input type="text" name="newtodo" placeholder="New task..." />
            <input type="submit" value="Add" />
        </form>
    </div>
</body>
</html>
