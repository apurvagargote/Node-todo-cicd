<!DOCTYPE html>
<html lang="en">
<head>
    <title>üî• Minimal Todo List</title>
    <style>
        /* üåô Minimal Dark Theme */
        :root {
            --bg-color: #121212;
            --container-bg: rgba(128, 0, 128, 0.1); /* Faint Purple */
            --card-bg: #1e1e1e;
            --text-color: #ddd;
            --input-bg: #2a2a2a;
            --btn-bg: #6f42c1;
            --btn-hover: #8257e5;
            --delete-btn: #ff4b5c;
            --favorite-btn: #f4b400;
            --header-bg: linear-gradient(45deg, #6f42c1, #8257e5);
        }

        body {
            font-family: "Poppins", sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
            text-align: center;
            margin: 0;
            padding: 20px;
        }

        .header {
            background: var(--header-bg);
            padding: 20px;
            border-radius: 12px;
            font-size: 24px;
            font-weight: bold;
            color: white;
            text-shadow: 2px 2px 5px rgba(0,0,0,0.3);
            margin-bottom: 20px;
        }

        .container {
            max-width: 400px;
            margin: auto;
            padding: 20px;
            background: var(--container-bg);
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }

        /* Todo List */
        ul {
            list-style: none;
            padding: 0;
        }

        ul li {
            background: var(--input-bg);
            padding: 12px;
            margin: 10px 0;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            transition: 0.3s;
            position: relative;
        }

        ul li.completed {
            text-decoration: line-through;
            opacity: 0.6;
        }

        ul li.favorite {
            border-left: 5px solid var(--favorite-btn);
        }

        ul li:hover {
            transform: translateY(-2px);
            box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.1);
        }

        .delete-btn, .edit-btn, .complete-btn, .favorite-btn {
            cursor: pointer;
            font-size: 16px;
            transition: 0.3s;
            margin-left: 8px;
        }

        .delete-btn { color: var(--delete-btn); }
        .delete-btn:hover { color: #ff7878; }

        .edit-btn { color: var(--btn-bg); }
        .edit-btn:hover { color: var(--btn-hover); }

        .complete-btn { color: #4caf50; }
        .complete-btn:hover { color: #66bb6a; }

        .favorite-btn { color: var(--favorite-btn); }
        .favorite-btn:hover { color: #ffcc00; }

        /* Form */
        form {
            margin-top: 20px;
        }

        input[type="text"] {
            width: 100%;
            padding: 12px;
            border: none;
            background: var(--input-bg);
            border-radius: 10px;
            color: var(--text-color);
        }

        .btn {
            background-color: var(--btn-bg);
            color: white;
            padding: 12px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s;
            width: 100%;
            margin-top: 10px;
        }

        .btn:hover { background-color: var(--btn-hover); }
    </style>
</head>
<body>
    <div class="header">üî• Minimal Todo List üî•</div>
    <div class="container">
        <ul>
            <% todolist.forEach(function(todo, index) { %>
            <li class="<%= todo.completed ? 'completed' : '' %> <%= todo.favorite ? 'favorite' : '' %>">
                <span><%- todo.text %></span>
                <span>
                    <a href="/todo/complete/<%= index %>" class="complete-btn">‚úÖ</a>
                    <a href="/todo/favorite/<%= index %>" class="favorite-btn">‚≠ê</a>
                    <a href="/todo/<%= index %>" class="edit-btn">‚úèÔ∏è</a>
                    <a href="/todo/delete/<%= index %>" class="delete-btn">‚ùå</a>
                </span>
            </li>
            <% }); %>
        </ul>

        <form action="/todo/add/" method="post">
            <input type="text" name="newtodo" placeholder="Add a new task..." autofocus />
            <input type="submit" value="Add Task" class="btn" />
        </form>
    </div>
</body>
</html>
