<!DOCTYPE html>
<html lang="en">
<head>
    <title>Sexy Minimal Todo List</title>
    <style>
        /* üåô Minimal Dark Theme */
        :root {
            --bg-color: #121212;
            --card-bg: #1e1e1e;
            --text-color: #ddd;
            --input-bg: #2a2a2a;
            --btn-bg: #6f42c1;
            --btn-hover: #8257e5;
            --delete-btn: #ff4b5c;
        }

        body {
            font-family: "Poppins", sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
            text-align: center;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 400px;
            margin: auto;
            padding: 20px;
            background: var(--card-bg);
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }

        h1 {
            font-size: 22px;
            font-weight: bold;
            color: #b39ddb;
        }

        /* Todo List */
        ul {
            list-style: none;
            padding: 0;
        }

        ul li {
            background: var(--input-bg);
            padding: 12px;
            margin: 10px 0;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            transition: 0.3s;
        }

        ul li:hover {
            transform: translateY(-2px);
            box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.1);
        }

        .delete-btn, .edit-btn {
            cursor: pointer;
            font-size: 16px;
            transition: 0.3s;
        }

        .delete-btn { color: var(--delete-btn); }
        .delete-btn:hover { color: #ff7878; }

        .edit-btn { color: var(--btn-bg); }
        .edit-btn:hover { color: var(--btn-hover); }

        /* Form */
        form {
            margin-top: 20px;
        }

        input[type="text"] {
            width: 100%;
            padding: 12px;
            border: none;
            background: var(--input-bg);
            border-radius: 10px;
            color: var(--text-color);
        }

        .btn {
            background-color: var(--btn-bg);
            color: white;
            padding: 12px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s;
            width: 100%;
            margin-top: 10px;
        }

        .btn:hover { background-color: var(--btn-hover); }
    </style>
</head>
<body>
    <h1>üî• Minimal Todo List üî•</h1>
    <div class="container">
        <ul>
            <% todolist.forEach(function(todo, index) { %>
            <li>
                <span><%- todo %></span>
                <span>
                    <a href="/todo/<%= index %>" class="edit-btn">‚úèÔ∏è</a>
                    <a href="/todo/delete/<%= index %>" class="delete-btn">‚ùå</a>
                </span>
            </li>
            <% }); %>
        </ul>

        <form action="/todo/add/" method="post">
            <input type="text" name="newtodo" placeholder="Add a new task..." autofocus />
            <input type="submit" value="Add Task" class="btn" />
        </form>
    </div>
</body>
</html>
