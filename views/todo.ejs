<!DOCTYPE html>
<html lang="en">
<head>
    <title>Todo List</title>
    <style>
        /* üîπ Gradient Theme & Glassmorphism */
        :root {
            --bg-gradient: linear-gradient(135deg, #3a1c71, #d76d77, #ffaf7b);
            --text-color: #fff;
            --card-bg: rgba(255, 255, 255, 0.1);
            --input-bg: rgba(255, 255, 255, 0.2);
            --btn-bg: #6a11cb;
            --btn-hover: #9b39f5;
            --delete-bg: #ff4d4d;
            --edit-bg: #ffcc00;
        }

        [data-theme="dark"] {
            --bg-gradient: linear-gradient(135deg, #161616, #333, #111);
            --text-color: #ddd;
            --card-bg: rgba(255, 255, 255, 0.05);
            --input-bg: rgba(255, 255, 255, 0.1);
            --btn-bg: #52057b;
            --btn-hover: #9b39f5;
            --delete-bg: #ff3333;
            --edit-bg: #ffd700;
        }

        /* Global Styles */
        body {
            font-family: "Poppins", sans-serif;
            background: var(--bg-gradient);
            color: var(--text-color);
            text-align: center;
            margin: 0;
            transition: all 0.5s ease-in-out;
        }

        .container {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            background: var(--card-bg);
            backdrop-filter: blur(15px);
            border-radius: 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        }

        h1 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        /* üîπ Dark Mode Toggle */
        .toggle-theme {
            position: absolute;
            top: 10px;
            right: 20px;
            background: none;
            border: none;
            font-size: 24px;
            cursor: pointer;
            color: var(--text-color);
        }

        /* Task List */
        ul {
            list-style: none;
            padding: 0;
        }

        ul li {
            background: var(--input-bg);
            padding: 10px;
            margin-bottom: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-radius: 10px;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        ul li.completed {
            text-decoration: line-through;
            opacity: 0.6;
            background: rgba(0, 255, 0, 0.2);
        }

        /* Buttons */
        .edit-btn, .delete-btn, .complete-btn {
            padding: 8px 12px;
            border: none;
            cursor: pointer;
            color: white;
            border-radius: 8px;
            transition: all 0.3s ease-in-out;
        }

        .edit-btn { background-color: var(--edit-bg); }
        .delete-btn { background-color: var(--delete-bg); }
        .complete-btn { background-color: var(--btn-bg); }

        .edit-btn:hover { background-color: #e6b800; }
        .delete-btn:hover { background-color: darkred; }
        .complete-btn:hover { background-color: var(--btn-hover); }

        /* Form */
        form {
            margin-top: 20px;
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        input[type="text"] {
            width: 70%;
            padding: 12px;
            border: none;
            background: var(--input-bg);
            backdrop-filter: blur(5px);
            border-radius: 10px;
            color: var(--text-color);
        }

        input[type="submit"] {
            background-color: var(--btn-bg);
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s;
        }

        input[type="submit"]:hover {
            background-color: var(--btn-hover);
        }
    </style>
</head>
<body>
    <button class="toggle-theme" onclick="toggleTheme()">üåô</button>
    <h1>‚ú® My Aesthetic Todo List ‚ú®</h1>
    <div class="container">
        <ul>
            <% todolist.forEach(function(todo, index) { %>
                <li class="<%= todo.completed ? 'completed' : '' %>">
                    <span onclick="toggleComplete(<%= index %>)"><%- todo.text %></span>
                    <div>
                        <a href="/todo/<%= index %>" class="edit-btn">‚úé</a>
                        <form action="/todo/delete/<%= index %>" method="post" style="display:inline;">
                            <button type="submit" class="delete-btn">‚úò</button>
                        </form>
                        <form action="/todo/complete/<%= index %>" method="post" style="display:inline;">
                            <button type="submit" class="complete-btn">‚úî</button>
                        </form>
                    </div>
                </li>
            <% }); %>
        </ul>

        <form action="/todo/add/" method="post">
            <input type="text" name="newtodo" placeholder="Add a new task..." />
            <input type="submit" value="Add" />
        </form>
    </div>

    <script>
        function toggleTheme() {
            let currentTheme = document.body.getAttribute("data-theme");
            let newTheme = currentTheme === "dark" ? "light" : "dark";
            document.body.setAttribute("data-theme", newTheme);
            localStorage.setItem("theme", newTheme);
            document.querySelector(".toggle-theme").innerText = newTheme === "dark" ? "‚òÄÔ∏è" : "üåô";
        }

        // Load saved theme
        document.addEventListener("DOMContentLoaded", function() {
            let savedTheme = localStorage.getItem("theme") || "light";
            document.body.setAttribute("data-theme", savedTheme);
            document.querySelector(".toggle-theme").innerText = savedTheme === "dark" ? "‚òÄÔ∏è" : "üåô";
        });
    </script>
</body>
</html>
